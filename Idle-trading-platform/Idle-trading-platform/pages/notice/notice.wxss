.chat-item{
  width: 750rpx;
  background: #ffffff;
  padding: 25rpx 25rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.chat-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.chat-item .avatar{
  flex: 1;
}
.chat-item .chat-content{
  flex: 4;
  text-align: left;
}
/* .chat-item .chat-content text{
} */
.chat-item .chat-content .chat-source{
  color: #818A8F;
  font-size: 28rpx;
  padding: 4rpx 0 8rpx 0;
}
.chat-item .chat-content .chat-source .chatmate{
  font-size: 34rpx;
  color: #000000;
  text-align: left;
}

.chat-item .chat-content .chat-source .lasttime{
  flex: 1;
  font-size: 22rpx;
  padding: 0rpx 0rpx 0rpx 0rpx;
  float: right;
  vertical-align: text-bottom;
}

.lasttime{
  text-align: right;
}

.chat-item .chat-content .chat-txt{
  display: block;
  color: #7b7b7b;
  font-size: 26rpx;
  line-height: 34rpx;
}


.goods-item{
  width: 90rpx;
  background: #ffffff;
  padding: 0rpx 0rpx 0rpx 0rpx;
  flex: 1;
  /* border-bottom: solid 1px #ebebeb; */
}
.goods-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 5rpx;
  box-shadow:rgba(0,0,0,0.15) 0 0 15rpx;
  background:#FBFBFB;   
  border:1rpx solid #ddd;
  padding:2rpx;
}
.goods-item .avatar{
  flex: 1;
}
.goods-item .goods-content{
  flex: 4;
  text-align: left;
}
/* .goods-item .goods-content text{
} */
.goods-item .goods-content .goods-source{
  color: #818A8F;
  font-size: 28rpx;
  padding: 0rpx 0 8rpx 0;
}
.goods-item .goods-content .goods-source .goodsmate{
  font-size: 34rpx;
  color: #000000;
  text-align: left;
}
.goods-item .goods-content .goods-source .lasttime{
  flex: 1;
  font-size: 22rpx;
  float: right;
